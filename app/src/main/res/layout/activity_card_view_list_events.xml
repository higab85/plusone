<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Prueba"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:id="@+id/event_location"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Prueba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_location"
            android:id="@+id/event_start"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="Prueba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_start"
            android:layout_marginTop="2dp"
            android:layout_below="@id/event_location"
            android:id="@+id/event_end"
            android:textSize="12sp"
            android:text="Prueba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_end"
            android:layout_marginTop="2dp"
            android:layout_below="@id/event_location"
            android:id="@+id/event_description"
            android:textSize="1px"
            android:visibility="invisible"
            android:text="Prueba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_description"
            android:layout_marginTop="2dp"
            android:layout_below="@id/event_location"
            android:id="@+id/event_type"
            android:textSize="1px"
            android:visibility="invisible"
            android:text="Prueba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_type"
            android:layout_marginTop="2dp"
            android:layout_below="@id/event_location"
            android:id="@+id/event_reqPeople"
            android:textSize="1px"
            android:visibility="invisible"
            android:text="Prueba"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>