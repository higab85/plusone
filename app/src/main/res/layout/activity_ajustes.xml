<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="plusone.plusone.AjustesActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textViewAjustesNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/textViewAjustesNombre" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/editTextAjustesNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/editTextAjustesNombre" />

            <ImageButton
                android:id="@+id/imageButtonNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                tools:layout_editor_absoluteX="-131dp"
                tools:layout_editor_absoluteY="481dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/textViewAjustesAppel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/textViewAjustesAppel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/editTextAjustesAppel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/editTextAjustesAppel" />

            <ImageButton
                android:id="@+id/imageButtonApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                tools:layout_editor_absoluteX="-131dp"
                tools:layout_editor_absoluteY="481dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/textViewAjustesEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/textViewAjustesEmail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/editTextAjustesEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editTextAjustesEmail"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <ImageButton
                android:id="@+id/imageButtonEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                tools:layout_editor_absoluteX="-131dp"
                tools:layout_editor_absoluteY="481dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/textViewAjustesContrasena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/textViewAjustesContrasena"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/editTextAjustesContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editTextAjustesContrasena"
                android:ems="10"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/imageButtonContrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                tools:layout_editor_absoluteX="-131dp"
                tools:layout_editor_absoluteY="481dp" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxAjustesSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/sexoAjustes" />

        <Button
            android:id="@+id/cambiarButtonAjustes"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/cambiarButtonAjustes"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="273dp" />

        <Button
            android:id="@+id/cerrarButtonAjustes"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/cerrarButtonAjustes"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="273dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>